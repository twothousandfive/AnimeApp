<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeApp.Pages.RegisterPage"
             Title="Регистрация"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>
            <DatePicker x:Name="BirthDatePicker" />

            <Button Text="Выбрать фото профиля" Clicked="OnSelectPhotoClicked"/>
            <Image x:Name="ProfileImage" HeightRequest="100"/>

            <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked"/>
            <Label Text="Уже есть аккаунт? Войти" TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoginTapped}" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>