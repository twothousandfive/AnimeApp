<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AnimeApp.Pages.AnimeDetailsPage"
             Title="Детали Аниме"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Image x:Name="CoverImage" Aspect="AspectFill" HeightRequest="200"/>

            <Label x:Name="TitleLabel" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>


            <toolkit:MediaElement x:Name="VideoPlayer"
                          HeightRequest="250" />

            <Label Text="Описание:" FontAttributes="Bold" FontSize="18" Margin="0,20,0,0"/>
            <Label x:Name="DescriptionLabel" FontSize="16" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>